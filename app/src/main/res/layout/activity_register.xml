<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="25dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản"
        android:textSize="30sp"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản để gặp những người bạn mới!"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/edt_Name"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:hint="Tên đầy đủ"
            android:background="@drawable/input_border"
            android:backgroundTint="@color/material_dynamic_neutral95"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_Email"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:hint="Địa chỉ email"
            android:background="@drawable/input_border"
            android:backgroundTint="@color/material_dynamic_neutral95"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_Phone"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:hint=" +84 |"
            android:drawableLeft="@drawable/vietnam"
            android:background="@drawable/input_border"
            android:backgroundTint="@color/material_dynamic_neutral95"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_Password"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:hint="Mật khẩu"
            android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
            android:background="@drawable/input_border"
            android:backgroundTint="@color/material_dynamic_neutral95"
            android:padding="15dp"
            tools:ignore="Deprecated"
            android:password="true"
            />
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tôi đồng ý với Điều khoản dịch vụ và Chính sách bảo mật"
        android:textColor="@color/black"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:textSize="13sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <Button
        android:id="@+id/btn_Register"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:layout_gravity="center"
        android:backgroundTint="#123C69"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản?"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Đăng nhập"
            android:textSize="15sp"
            android:textColor="@color/primary_color"/>
    </LinearLayout>

</LinearLayout>