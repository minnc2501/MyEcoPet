<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/order_success"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt hàng thành công"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123c69"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đơn hàng của bạn đã được đặt thành công!"
        android:textSize="18sp"
        android:textColor="#123c69"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnThoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:backgroundTint="#ffffff"
            android:textSize="12sp"
            android:textColor="#123c69"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#123C69"
            app:strokeWidth="2dp"
            android:layout_alignParentLeft="true"

            />
        <Button
            android:id="@+id/btnTheoDoiDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theo dõi đơn"
            android:backgroundTint="#123c69"
            android:textSize="12sp"
            app:cornerRadius="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


</LinearLayout>