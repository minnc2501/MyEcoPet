<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imv_Photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sanpham1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="15dp">
                <TextView
                    android:id="@+id/txt_ProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="ANF 6Free Natural Indoor Adult Cat"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_ProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="530.000 VNÄ"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvSachInfo"
                    android:layout_toEndOf="@+id/imvSach"
                    android:layout_marginTop="5dp">
                    <ImageButton
                        android:id="@+id/btn_Tru"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_minus"
                        />
                    <EditText
                        android:id="@+id/edt_ProductQuantity"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:textSize="14sp"
                        android:background="#ffffff"
                        android:hint="1"
                        android:gravity="center"
                        android:textColor="@color/black"/>
                    <ImageButton
                        android:id="@+id/btn_Cong"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_plus"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>