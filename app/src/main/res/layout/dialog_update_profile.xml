<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_marginStart="24dp" />

            <TextView
                android:id="@+id/txtHeaderGioHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hồ sơ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#123c69"
                android:gravity="center_horizontal"
                android:layout_marginEnd="24dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:src="@drawable/avt"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/edt_SuaTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thảo"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/edt_SuaHo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/edt_SuaEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="thaontt19410@st.uel.edu.vn"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/edt_SuaSDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0337902072"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Luu"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:backgroundTint="#123C69"
        android:text="Lưu"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="1"/>

</LinearLayout>